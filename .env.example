
# MySQL Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=kalanow_db

# Admin Credentials (for initial login or if not using a separate admins table)
# IMPORTANT: For production, use strong, unique passwords and manage them securely.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123@

# JWT Secret Key (for admin sessions or other token-based auth if implemented)
# Generate a strong, random string for this. Example: openssl rand -base64 32
JWT_SECRET=YOUR_STRONG_RANDOM_JWT_SECRET_KEY_HERE

# SMS Provider API Key (e.g., Kavenegar)
SMS_API_KEY=YOUR_SMS_PROVIDER_API_KEY
SMS_SENDER_NUMBER=YOUR_SMS_SENDER_NUMBER

# Payment Gateway Configuration (Example for a generic gateway)
PAYMENT_GATEWAY_MERCHANT_ID=YOUR_MERCHANT_ID
PAYMENT_GATEWAY_CALLBACK_URL=http://localhost:9002/api/payment/callback # Adjust for production

# Admin Notification Settings
ADMIN_NOTIFICATION_PHONE=ADMIN_PHONE_NUMBER_FOR_SMS_ALERTS # e.g., 09123456789
ADMIN_NOTIFICATION_EMAIL=admin_email@example.com # Email for admin alerts

# Next.js specific (optional, usually managed by hosting environment)
# PORT=9002 # The port Next.js will run on (dev script uses 9002 as default if $PORT is not set)
# NODE_ENV=development # or production

# Base URL for your application (used for constructing absolute URLs in emails, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:9002 # Change to your production domain

